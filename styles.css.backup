}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Daily Logs Styles */
.daily-logs-container {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.daily-log-card {

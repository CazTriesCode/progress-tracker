/* Gamified Dashboard Styles */
.history-dashboard {
  padding: 2rem;
  max-width: 1400px;
  margin: 0 auto;
  width: 100%;
}

.stats-section {
  margin-bottom: 3rem;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  padding: 2.5rem;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 1.8rem;
  font-weight: 700;
  margin-bottom: 2rem;
  color: #1a202c;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

/* Overall Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1.5rem;
}

.stat-card {
  background: rgba(0, 105, 92, 0.08);
  border-radius: 16px;
  padding: 2rem;
  text-align: center;
  border: 1px solid rgba(0, 105, 92, 0.15);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  min-height: 160px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.stat-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 25px rgba(0, 105, 92, 0.15);
}

.stat-card.featured {
  background: linear-gradient(
    135deg,
    rgba(46, 125, 50, 0.15),
    rgba(0, 105, 92, 0.15)
  );
  border: 2px solid rgba(46, 125, 50, 0.3);
  transform: scale(1.02);
}

.stat-card.featured:hover {
  transform: scale(1.02) translateY(-4px);
}

.stat-icon {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.stat-value {
  font-size: 3rem;
  font-weight: bold;
  color: #1a202c;
  margin-bottom: 0.5rem;
  line-height: 1;
}

.stat-label {
  font-size: 1rem;
  color: #4b5563;
  margin-bottom: 0.75rem;
  font-weight: 500;
}

.stat-trend,
.stat-secondary {
  font-size: 0.9rem;
  color: #6b7280;
  line-height: 1.4;
}

/* Individual Goals Grid */
.goals-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 1.5rem;
}

.goal-card {
  background: rgba(0, 105, 92, 0.05);
  border-radius: 16px;
  padding: 2rem;
  border: 1px solid rgba(0, 105, 92, 0.15);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.goal-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 105, 92, 0.1);
}

.goal-header {
  display: flex;
  align-items: center;
  margin-bottom: 1.5rem;
}

.goal-icon {
  font-size: 1.8rem;
  margin-right: 1.25rem;
}

.goal-info {
  flex: 1;
}

.goal-info h3 {
  margin: 0;
  color: #1a202c;
  font-size: 1.25rem;
  font-weight: 600;
}

.goal-completion {
  font-size: 1rem;
  color: #4b5563;
  margin-top: 0.25rem;
}

.goal-trend {
  font-size: 1.5rem;
}

.goal-stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.25rem;
  margin-bottom: 1.5rem;
}

.goal-stat {
  text-align: center;
  padding: 1rem;
  background: rgba(0, 105, 92, 0.08);
  border-radius: 12px;
  transition: background-color 0.2s ease;
}

.goal-stat:hover {
  background: rgba(0, 105, 92, 0.12);
}

.goal-stat-value {
  display: block;
  font-size: 1.75rem;
  font-weight: bold;
  color: #1a202c;
  margin-bottom: 0.25rem;
}

.goal-stat-label {
  display: block;
  font-size: 0.9rem;
  color: #4b5563;
  font-weight: 500;
}

.goal-achievement {
  background: linear-gradient(
    135deg,
    rgba(255, 193, 7, 0.2),
    rgba(255, 152, 0, 0.2)
  );
  border: 1px solid rgba(255, 193, 7, 0.4);
  border-radius: 12px;
  padding: 1rem;
  font-size: 1rem;
  color: #1a202c;
  text-align: center;
  font-weight: 500;
}

/* Achievements Grid */
.achievements-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 1.5rem;
}

.achievement-card {
  background: linear-gradient(
    135deg,
    rgba(255, 193, 7, 0.2),
    rgba(255, 152, 0, 0.2)
  );
  border: 1px solid rgba(255, 193, 7, 0.4);
  border-radius: 16px;
  padding: 1.5rem;
  text-align: center;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  min-height: 140px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.achievement-card:hover {
  transform: scale(1.05) translateY(-2px);
  box-shadow: 0 8px 25px rgba(255, 193, 7, 0.25);
}

.achievement-icon {
  font-size: 2.5rem;
  margin-bottom: 0.75rem;
}

.achievement-title {
  font-weight: bold;
  color: #1a202c;
  margin-bottom: 0.5rem;
  font-size: 1.1rem;
}

.achievement-desc {
  font-size: 0.9rem;
  color: #4b5563;
  line-height: 1.4;
}

/* Trend Chart */
.trend-chart {
  display: flex;
  align-items: end;
  justify-content: space-around;
  height: 200px;
  background: rgba(0, 105, 92, 0.05);
  border-radius: 12px;
  padding: 1.5rem;
  gap: 1rem;
  margin: 1rem 0;
}

.trend-bar {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  max-width: 80px;
}

.trend-bar-fill {
  width: 100%;
  background: linear-gradient(to top, #00695c, #2e7d32);
  border-radius: 6px 6px 0 0;
  min-height: 6px;
  transition: height 0.3s ease;
  margin-bottom: auto;
  box-shadow: 0 2px 8px rgba(0, 105, 92, 0.2);
}

.trend-bar-label {
  font-size: 0.9rem;
  color: #4b5563;
  margin-top: 0.75rem;
  font-weight: 500;
}

.trend-bar-value {
  font-size: 0.8rem;
  color: #6b7280;
  margin-top: 0.25rem;
}

/* Recent History */
.recent-history {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.history-item-modern {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(0, 105, 92, 0.08);
  border-radius: 12px;
  padding: 1.25rem;
  border: 1px solid rgba(0, 105, 92, 0.2);

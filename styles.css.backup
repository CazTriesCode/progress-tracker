  color: #1a202c;
  min-width: 180px;
  font-size: 1rem;
}

.history-stats-modern {
  display: flex;
  gap: 0.75rem;
  flex-wrap: wrap;
}

.mini-stat {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: rgba(0, 105, 92, 0.08);
  border-radius: 8px;
  padding: 0.5rem 0.75rem;
  font-size: 0.9rem;
  border: 1px solid rgba(0, 105, 92, 0.15);
  transition: all 0.2s ease;
}

.mini-stat:hover {
  background: rgba(0, 105, 92, 0.12);
  transform: scale(1.05);
}

.mini-stat.completed {
  background: rgba(46, 125, 50, 0.15);
  border-color: rgba(46, 125, 50, 0.3);
}

.mini-stat-icon {
  font-size: 1.1rem;
}

.mini-stat-value {
  color: #1a202c;
  font-weight: 600;

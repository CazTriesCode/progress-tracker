/* Mobile Progress Circle - Slick Modern Design */
@media (max-width: 768px) {
  .progress-circle {
    position: relative;
    display: block !important;
    margin: 20px auto 40px auto;
    width: min(350px, calc(100vw - 40px));
    height: min(350px, calc(100vw - 40px));
    max-width: calc(100vw - 40px);
    max-height: calc(100vw - 40px);
    border: 3px solid #b1ffd6;
    border-radius: 50%;
    background: linear-gradient(135deg, #00582b 0%, #006b32 100%);
    visibility: visible;
    box-sizing: border-box;
    box-shadow: 0 0 30px rgba(177, 255, 214, 0.3),
      inset 0 0 30px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .progress-circle:hover {
    transform: scale(1.02);
    box-shadow: 0 0 40px rgba(177, 255, 214, 0.5),
      inset 0 0 30px rgba(0, 0, 0, 0.1);
  }

  .progress-circle svg {
    display: none !important;
    visibility: hidden;
  }

  /* Hide any other SVG circles */
  .progress-circle circle {
    display: none !important;
  }

  .progress-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    display: block;
    visibility: visible;
  }

  .progress-date {
    font-size: clamp(0.9rem, 3vw, 1.1rem);
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 16px;
    display: block;
    font-weight: 500;
    letter-spacing: 0.5px;
    cursor: pointer;
    padding: 8px 12px;
    border-radius: 8px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: rgba(177, 255, 214, 0.1);
    border: 1px solid rgba(177, 255, 214, 0.2);
  }

  .progress-date:hover {
    background: rgba(177, 255, 214, 0.2);
    border-color: rgba(177, 255, 214, 0.4);
    color: #b1ffd6;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(177, 255, 214, 0.3);
  }

  .progress-percentage {
    display: block;
    font-size: clamp(3rem, 12vw, 4.5rem);
    font-weight: 900;
    color: #b1ffd6;
    font-family: "Courier New", monospace;
    letter-spacing: 4px;
    margin-bottom: 20px;
    line-height: 1;
    text-shadow: 0 0 20px rgba(177, 255, 214, 0.5);
    animation: glow 3s ease-in-out infinite alternate;
  }

  @keyframes glow {
    from {
      text-shadow: 0 0 20px rgba(177, 255, 214, 0.3);
    }
    to {
      text-shadow: 0 0 30px rgba(177, 255, 214, 0.8);
    }
  }

  .progress-label {
    font-size: clamp(0.8rem, 2.5vw, 1rem);
    color: rgba(255, 255, 255, 0.8);
    font-weight: 500;
    margin-bottom: 12px;
    letter-spacing: 0.3px;
  }

  .progress-select-date {
    font-size: clamp(0.75rem, 2.2vw, 0.9rem);
    color: #00582b;
    background: linear-gradient(135deg, #b1ffd6 0%, #9eedc7 100%);
    border: none;
    border-radius: 20px;
    padding: 8px 16px;
    display: inline-block;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 2px 10px rgba(177, 255, 214, 0.3);
  }

  .progress-select-date:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(177, 255, 214, 0.5);
    background: linear-gradient(135deg, #9eedc7 0%, #8ee8b8 100%);
  }
}

